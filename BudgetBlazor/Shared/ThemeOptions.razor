@inject IBlazorStrap _blazorStrap

@foreach (string theme in _themes)
{
    <BSDropdownItem OnClick='() => ChangeTheme(theme)'>@theme</BSDropdownItem>
}

@code
{
    private List<string> _themes = new List<string>();

    protected override void OnInitialized()
    {
        _themes = Enum.GetNames(typeof(Theme)).ToList();
    }

    protected override async Task OnAfterRenderAsync(bool firstrun)
    {
        if (firstrun)
        {
            await _blazorStrap.SetBootstrapCss("sketchy", "5.1.3");
        }
    }

    private async Task ChangeTheme(string newTheme)
    {
        await _blazorStrap.SetBootstrapCss(newTheme, "5.1.3");
    }
}