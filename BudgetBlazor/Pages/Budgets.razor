@attribute [Authorize]
@page "/Budgets"
@inherits BudgetsBase

<PageTitle>Budgets</PageTitle>

<!-- Page Header -->
<PageHeader PageIcon="@Icons.Material.Filled.PieChartOutline" PageTitleText="Budgets">
    <PageHeaderActions>
        <MudGrid Spacing="0" Justify="Justify.Center">
            <MudItem xs="2" md="1" Style="padding: 1rem 0;">
                <MudTooltip Text="Reset Month To Default">
                    <MudIconButton Icon="@Icons.Filled.RestartAlt" OnClick="ResetMonthToDefault" />
                </MudTooltip>
            </MudItem>
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudItem md="2" Style="text-align: right !important; padding: 1rem 0;">
                    <MudIconButton Icon="@Icons.Filled.ArrowLeft" OnClick="LastMonth" />
                </MudItem>
            </MudHidden>
            <MudItem xs="10" md="6">
                <MudDatePicker 
                    PickerVariant="PickerVariant.Dialog"
                    DateFormat="MMMM yyyy" 
                    FixDay="1" 
                    OpenTo="OpenTo.Month"
                    PickerClosed="MonthChanged"
                    @bind-Date="_currentMonthDate" />
            </MudItem>
            <MudHidden Breakpoint="Breakpoint.SmAndDown">
                <MudItem md="2" Style="text-align: left !important; padding: 1rem 0;">
                    <MudIconButton Icon="@Icons.Filled.ArrowRight" OnClick="NextMonth" />
                </MudItem>
            </MudHidden>
        </MudGrid>
    </PageHeaderActions>
</PageHeader>

<!-- Income and Total Budget Card -->
<MudCard Class="my-4" Elevation="3" Style="@($"color:{CurrentTheme.Palette.TextPrimary}; background:{CurrentTheme.Palette.GrayLight};")">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Total Budget - @String.Format("{0:MMMM yyyy}", _currentMonthDate)</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Default" OnClick="OpenEditIncomeDialog" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent Class="my-n4">
        <MudPaper Class="my-2 pa-1" Elevation="1" Style="@($"color:{CurrentTheme.Palette.TextPrimary}; background:{CurrentTheme.Palette.GrayLighter};")">
            <MudText Typo="Typo.subtitle2"><i>Expected Income - </i>@String.Format("{0:C}", _currentMonth.ExpectedIncome)</MudText>
            <MudProgressLinear Color="@ColorHelpers.ProgressBarColorReverse(_currentMonth.PercentBudgeted)" Rounded="true" Size="Size.Large" Value="@_currentMonth.PercentBudgeted" />
            <MudText Typo="Typo.subtitle2"><i>Total Budgeted - </i>@String.Format("{0:C}", _currentMonth.TotalBudgeted)</MudText>
        </MudPaper>
        
        <MudPaper Class="my-2 pa-1" Elevation="1" Style="@($"color:{CurrentTheme.Palette.TextPrimary}; background:{CurrentTheme.Palette.GrayLighter};")">
            <MudText Typo="Typo.subtitle2"><i>Actual Income - </i>@String.Format("{0:C}", _currentMonth.ActualIncome)</MudText>
            <MudProgressLinear Color="@ColorHelpers.ProgressBarColor(_currentMonth.PercentSpent)" Rounded="true" Size="Size.Large" Value="@_currentMonth.PercentSpent" />
            <MudText Typo="Typo.subtitle2"><i>Total Spent - </i>@String.Format("{0:C}", (_currentMonth.TotalSpent * -1))</MudText>
        </MudPaper>
    </MudCardContent>
</MudCard>

<!-- Budget Lists -->
<MudCard Class="my-8" Elevation="3" Style="@($"color:{CurrentTheme.Palette.TextPrimary}; background:{CurrentTheme.Palette.GrayLighter};")">
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Budgets</MudText>
        </CardHeaderContent>
        <CardHeaderActions>
            <MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="OpenAddCategoryDialog" />
        </CardHeaderActions>
    </MudCardHeader>
    <MudCardContent>
        @if (_currentMonth.BudgetCategories.Count == 0)
        {
            <MudText Typo="Typo.body2" Align="Align.Center"><i>No budget categories to display</i></MudText>
        }
        else
        {
            <MudStack>
                @foreach(BudgetCategory category in _currentMonth.BudgetCategories)
                {
                    <BudgetCategoryDisplay Category="@category" AreBudgetsEditable="true" ShouldShowTotals="true" />
                }
            </MudStack>
        }
    </MudCardContent>
</MudCard>