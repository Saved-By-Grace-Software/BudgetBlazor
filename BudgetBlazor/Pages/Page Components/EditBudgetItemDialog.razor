<MudDialog>
    <DialogContent>
        <MudForm @ref="form" @bind-IsValid="@success" @bind-Errors="@errors">
            <MudTextField @bind-Value="BudgetName" Label="Budget Name" Variant="Variant.Outlined" Required="true" RequiredError="Must enter a Budget name"></MudTextField>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string BudgetName { get; set; }

    MudForm form;
    bool success;
    string[] errors = { };

    private async Task Submit()
    {
        // Validate the form
        await form.Validate();

        if (form.IsValid)
        {
            MudDialog.Close(BudgetName);
        }
    }

    void Cancel() => MudDialog.Cancel();
}